<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- TODO theme -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <!-- STYLE SIGN-IN ACTIVITY -->
    <style name="LoginTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorButtonNormal">@color/secondaryDarkColor</item>
        <item name="colorControlNormal">@color/backgroundSmoothGrey</item>
        <item name="colorControlActivated">@color/backgroundSmoothGrey</item>
        <item name="colorControlHighlight">@color/backgroundSmoothGrey</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:windowBackground">@color/backgroundSmoothGrey</item>
    </style>

    <!-- TOOLBAR THEME -->
    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Color of the title text in the Toolbar -->
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
    </style>

    <!-- TOOLBAR TITLE THEME -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="italic" tools:keep="@style/italic">
        <item name="android:fontStyle" tools:targetApi="o">italic</item>
        <item name="android:color">@color/themeGrey</item>
    </style>

    <!-- Rating style -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/themeGrey</item>
        <item name="colorControlActivated">@color/secondaryColor</item>
    </style>

</resources>
