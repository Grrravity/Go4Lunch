<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- STYLE SIGN-IN ACTIVITY -->
    <style name="LoginTheme" parent="AppTheme">
        <item name="colorPrimary">@color/mainBackground</item>
        <item name="colorPrimaryDark">@color/mainBackgroundSmooth</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/buttonMainColor</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:textColor">@color/mainText</item>
        <item name="android:textColorPrimary">@color/mainText</item>
        <item name="android:textColorSecondary">@color/mainTextHighlight</item>
        <item name="android:windowBackground">@color/backgroundSmoothGrey</item>
    </style>

    <!-- TOOLBAR THEME -->
    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Color of the title text in the Toolbar -->
        <item name="android:textColorPrimary">@color/mainText</item>
    </style>

    <!-- TOOLBAR TITLE THEME -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="italic" tools:keep="@style/italic">
        <item name="android:fontStyle" tools:targetApi="o">italic</item>
        <item name="android:color">#696969</item>
    </style>

    <!-- Rating style -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/quantum_grey700</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>


</resources>
