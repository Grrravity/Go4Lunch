<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.error.grrravity.go4lunch.controllers.fragments.ProfileFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/mainBackground"
    >

    <!-- USER DATA CONTAINER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="20dip">

            <!-- FIREBASE IMAGE -->
            <ImageView
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:background="@drawable/goforfood_front_logo"
                android:contentDescription="@string/goforfood_logo_description" />

            <!-- PROGRESS BAR -->
            <ProgressBar
                android:id="@+id/profile_activity_progress_bar"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:visibility="invisible"
                android:layout_margin="20dip"/>

            <!-- PROFILE IMAGE -->
            <ImageView
                android:id="@+id/profile_activity_profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_anon_user_48dp"
                android:contentDescription="@string/profile_image_description" />

        </LinearLayout>


        <!-- PROFILE USERNAME -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/profile_activity_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/text_input_username"
            android:layout_margin="20dip"
            android:padding="10dp"
            android:background="@color/white"/>

        <!-- PROFILE EMAIL CONTAINER
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dip"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_view_mail_address"
                android:textSize="15sp"
                />

            PROFILE EMAIL
            <TextView
                android:id="@+id/profile_activity_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingStart="20dip"
                tools:ignore="RtlSymmetry"/>

        </LinearLayout> -->


    </LinearLayout>

    <!-- BUTTONS CONTAINER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_weight="1">

        <!-- BUTTON UPDATE USERNAME -->
        <Button
            android:id="@+id/profile_activity_button_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_update_account"
            android:textColor="#fff"
            android:textSize="15sp"
            android:background="@color/buttonMainColor"
            style="?android:attr/borderlessButtonStyle"
            android:layout_margin="20dip"
            android:padding="20dip"/>

        <!-- BUTTON SIGN OUT -->
        <Button
            android:id="@+id/profile_activity_button_sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_sign_out"
            android:textColor="#fff"
            android:textSize="15sp"
            android:background="@color/buttonSecondColor"
            style="?android:attr/borderlessButtonStyle"
            android:layout_margin="20dip"
            android:padding="20dip"/>

        <!-- BUTTON DELETE ACCOUNT -->
        <Button
            android:id="@+id/profile_activity_button_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_delete_account"
            android:textColor="#fff"
            android:textSize="15sp"
            android:background="@color/buttonAccentColor"
            style="?android:attr/borderlessButtonStyle"
            android:layout_margin="20dip"
            android:padding="20dip"/>

    </LinearLayout>

</LinearLayout>