<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".controllers.MainActivity"
    tools:openDrawer="start">
    <!-- tools:openDrawer="start" -->

    <!-- RootView -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/activity_welcome_coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Toolbar Importation -->
            <androidx.appcompat.widget.Toolbar

                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mainBackground"

                android:minHeight="?attr/actionBarSize"

                android:theme="@style/ToolbarTheme"
                app:titleTextAppearance="@style/Toolbar.TitleText">

                <AutoCompleteTextView
                    android:id="@+id/myEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableEnd="@drawable/search_white"
                    android:hint="Search"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:textColorHint="#FFF"
                    android:textCursorDrawable="@null"

                    tools:ignore="HardcodedText" />
            </androidx.appcompat.widget.Toolbar>

            <!-- Body layout -->
            <RelativeLayout
                android:id="@+id/fragment_holder"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <!-- TODO Put in constraint -->
                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/activity_main_botnav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:background="@android:color/white"
                    app:itemIconTint="@drawable/bottom_navigation_colors"
                    app:itemTextColor="@drawable/bottom_navigation_colors"
                    app:menu="@menu/bottom_navigation_menu" />

                <FrameLayout
                    android:id="@+id/AM_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <Button
                    android:id="@+id/btn_find_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingEnd="5dp"
                    android:text="find restaurant"
                    android:textColor="@color/quantum_black_100"
                    android:drawableStart="@drawable/restaurant_menu_black"
                    android:background="@color/quantum_yellow"
                    android:textAllCaps="false"
                    android:fadingEdge="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="30dp"
                    android:visibility="gone"
                    />

            </RelativeLayout>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>



    <!-- NavigationView -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/main_activity_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/mainBackgroundSmooth"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/main_activity_nav_header"
        app:itemIconTint="@color/buttonSecondColor"
        app:itemTextColor="@color/mainText"
        app:menu="@menu/main_activity_menu_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>